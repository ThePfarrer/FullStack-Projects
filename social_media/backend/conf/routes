# Routes
# Users routes
POST    /api/users              controllers.UserController.create()
GET     /api/users              controllers.UserController.list()
GET     /api/users/:userId      controllers.UserController.read(userId: String)
PUT     /api/users/:userId      controllers.UserController.update(userId: String)
DELETE  /api/users/:userId      controllers.UserController.remove(userId: String)

# Auth routes
POST    /auth/signin            controllers.AuthController
GET     /auth/signout           controllers.AuthController
