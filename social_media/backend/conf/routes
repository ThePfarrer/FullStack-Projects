# Routes
# Persons routes
POST    /api/persons                controllers.PersonController.create()
GET     /api/persons                controllers.PersonController.list()
GET     /api/persons/:personId      controllers.PersonController.read(personId: String)
PUT     /api/persons/:personId      controllers.PersonController.update(personId: Long)
DELETE  /api/persons/:personId      controllers.PersonController.remove(personId: Long)

# Auth routes
POST    /auth/signin                controllers.AuthController.signIn()
GET     /auth/signout               controllers.AuthController.signOut()

GET     /                           controllers.PersonController.index()
